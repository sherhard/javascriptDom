		<input type="text" id='elem' value="">+<input type="text" id='elem2' value="">=<p id='res'></p><br>
		<button onclick="btn()">вычисление</button>

	<script type="text/javascript">

		function btn(){
			let elem=document.getElementById('elem');
			let elem2=document.getElementById('elem2');
			let res=document.getElementById('res');
			res.innerHTML=Number(elem.value)+Number(elem2.value);

		}
		
		

	</script>
		


