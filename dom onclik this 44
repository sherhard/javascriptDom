	<script type="text/javascript">
	

let elem =document.getElementsByTagName('a');
for(let i=0; i<elem.length; i++){
	elem[i].addEventListener('mouseover', func)

	
}
function func(){
	this.innerHTML = this.innerHTML + ' (' + this.href + ')';
}

</script>
		


