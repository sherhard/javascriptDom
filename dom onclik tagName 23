	<h1>главы</h1>
	<p>поменять на 1</p>
	<p>поменять на 2</p>
	<p>поменять на 3</p>
	<input type="button" onclick="perp()" value='кнопка'>

	<script type="text/javascript">
		function perp(){
			let elem=document.getElementsByTagName('p');
			elem[0].innerHTML='1';
			elem[1].innerHTML='2';
			elem[2].innerHTML='3';
		}

	</script>
  
	<script type="text/javascript">
		function perp(){
			let elem=document.getElementsByTagName('p');
			for(let i=0; i<elem.length; i++){
				elem[i].innerHTML=i+1;
			}
		}

	</script>
		


